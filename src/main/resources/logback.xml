<configuration>
    <!-- THIS ONE IS FOR CONSOLE -->
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">

        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />

    </root>


</configuration>